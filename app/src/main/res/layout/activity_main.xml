<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_1"
            app:layout_constraintGuide_percent="0.2"/>
    <TextView android:layout_width="match_parent"
              android:id="@+id/editText_equation"
              android:layout_height="0dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_1"
              android:background="#ffffff"
              android:text=""
              android:maxLines="2"
              android:paddingRight="30sp"
              android:gravity="right|center"
              android:focusable="false"
              android:textColor="#000000"
              android:textSize="40sp"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_2"
            app:layout_constraintGuide_percent="0.4"/>
    <TextView android:layout_width="match_parent"
              android:id="@+id/editText_result"
              android:layout_height="0dp"
              app:layout_constraintTop_toBottomOf="@id/editText_equation"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_2"
              android:background="#ffffff"
              android:text=""
              android:paddingRight="30sp"
              android:ellipsize="end"
              android:gravity="right|center"
              android:maxLines="2"
              android:textSize="35sp"
              android:textColor="#797979"/>
    <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_3"
            app:layout_constraintGuide_percent="0.55"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_4"
            app:layout_constraintGuide_percent="0.7"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_5"
            app:layout_constraintGuide_percent="0.85"/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_seven"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="onDigitClick"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/editText_result"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_3"
            android:text="7"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_four"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#3c4042"
            android:onClick="onDigitClick"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/button_seven"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_4"
            android:text="4"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_one"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="onDigitClick"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/button_four"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_5"
            android:text="1"/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="onDotClick"
            android:id="@+id/button_dot"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/button_one"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="."/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_eight"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_1"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="onDigitClick"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/editText_result"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_3"
            android:text="8"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_five"
            android:layout_height="0dp"
            android:onClick="onDigitClick"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_1"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/button_seven"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_4"
            android:text="5"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_two"
            android:layout_height="0dp"
            android:onClick="onDigitClick"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_1"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/button_four"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_5"
            android:text="2"/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_1"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:onClick="onDigitClick"
            android:textSize="25sp"
            android:id="@+id/button_zero"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/button_one"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0"/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_nine"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_2"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:onClick="onDigitClick"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/editText_result"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_3"
            android:text="9"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_six"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_2"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:onClick="onDigitClick"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/button_seven"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_4"
            android:text="6"/>
    <Button android:layout_width="0dp"
            android:id="@+id/button_three"
            android:layout_height="0dp"
            android:onClick="onDigitClick"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_2"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/button_four"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_5"
            android:text="3"/>
    <Button android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_2"
            android:background="#3c4042"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="onEqualClick"
            android:id="@+id/button_equal"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/button_one"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="="/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_6"
            app:layout_constraintGuide_percent="0.52"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_7"
            app:layout_constraintGuide_percent="0.64"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_8"
            app:layout_constraintGuide_percent="0.76"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/guideline_horizontal_9"
            app:layout_constraintGuide_percent="0.88"/>
    <Button
            android:id="@+id/button_del"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_result"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_6"
            android:background="#5f6267"
            android:text="DEL"
            android:onClick="onDelClick"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_del"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_7"
            android:background="#5f6267"
            android:onClick="onOperatorClick"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    <Button
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:onClick="onOperatorClick"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_divide"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_8"
            android:background="#5f6267"
            android:text="*"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    <Button
            android:id="@+id/button_subtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onOperatorClick"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_multiply"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_9"
            android:background="#5f6267"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onOperatorClick"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_subtract"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#5f6267"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="20sp"/>



</android.support.constraint.ConstraintLayout>